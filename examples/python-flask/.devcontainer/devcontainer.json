{
  "name": "Python Flask Development",

  // Docker Composeã‚’ä½¿ç”¨
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // ãƒãƒ¼ãƒˆè»¢é€
  "forwardPorts": [5001, 5173, 5433],
  "portsAttributes": {
    "5001": {
      "label": "Flask API",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Frontend",
      "onAutoForward": "notify"
    },
    "5433": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  // Dev Container Features
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  // VSCodeã‚«ã‚¹ã‚¿ãƒã‚¤ã‚º
  "customizations": {
    "vscode": {
      "extensions": [
        // Pythoné–‹ç™º
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",

        // React/TypeScript é–‹ç™º
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",

        // ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Docker
        "ms-azuretools.vscode-docker",

        // REST Clientï¼ˆAPI ãƒ†ã‚¹ãƒˆç”¨ï¼‰
        "humao.rest-client"
      ],

      "settings": {
        // Pythonè¨­å®š
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },

        // ãƒ†ã‚¹ãƒˆè¨­å®š
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,

        // SQLToolsè¨­å®š
        "sqltools.connections": [
          {
            "name": "PostgreSQL Local",
            "driver": "PostgreSQL",
            "server": "db",
            "port": 5433,
            "database": "flask_app",
            "username": "postgres",
            "password": "postgres"
          }
        ],

        // TypeScript/React è¨­å®š
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "tailwindCSS.experimental.classRegex": [
          ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
          ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ],

        // ãƒ•ã‚¡ã‚¤ãƒ«è¨­å®š
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/node_modules": true
        }
      }
    }
  },

  // ãƒ©ã‚¤ãƒ•ã‚µã‚¤ã‚¯ãƒ«ã‚³ãƒãƒ³ãƒ‰
  // NOTE: npm installã¨ã®ç«¶åˆã‚’é¿ã‘ã‚‹ãŸã‚ã€ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹åˆæœŸåŒ–ã¯æ‰‹å‹•å®Ÿè¡Œã«å¤‰æ›´
  // åˆå›èµ·å‹•å¾Œã€ã‚³ãƒ³ãƒ†ãƒŠå†…ã§ `python init_db.py` ã‚’å®Ÿè¡Œã—ã¦ãã ã•ã„
  "postCreateCommand": "pip install -r requirements.txt -r requirements-dev.txt && npm install",
  "postStartCommand": "echo 'âœ… Flask + React Dev Container is ready!\nğŸ Flask API: http://localhost:5001\nâš›ï¸  React App: http://localhost:5173\n\nâš ï¸  åˆå›èµ·å‹•æ™‚ã¯ä»¥ä¸‹ã‚’å®Ÿè¡Œã—ã¦ãã ã•ã„:\n   python init_db.py'",

  // ã‚³ãƒ³ãƒ†ãƒŠå†…ã®å®Ÿè¡Œãƒ¦ãƒ¼ã‚¶ãƒ¼
  "remoteUser": "root",

  // VSCodeçµ‚äº†æ™‚ã«Docker Composeã‚’åœæ­¢
  "shutdownAction": "stopCompose"
}
