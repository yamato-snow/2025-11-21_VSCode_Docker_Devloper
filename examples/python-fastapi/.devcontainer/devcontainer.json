{
  "name": "FastAPI Backend Development",

  // Docker Composeã‚’ä½¿ç”¨
  "dockerComposeFile": "docker-compose.yml",
  "service": "api",
  "workspaceFolder": "/workspace",

  // ãƒãƒ¼ãƒˆè»¢é€
  "forwardPorts": [8000, 5173, 5433, 6379],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Frontend",
      "onAutoForward": "notify"
    },
    "5433": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  // Dev Container Features
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  // VSCodeã‚«ã‚¹ã‚¿ãƒã‚¤ã‚º
  "customizations": {
    "vscode": {
      "extensions": [
        // Pythoné–‹ç™º
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",

        // React/TypeScript é–‹ç™º
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",

        // ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Docker
        "ms-azuretools.vscode-docker",

        // REST Clientï¼ˆAPI ãƒ†ã‚¹ãƒˆç”¨ï¼‰
        "humao.rest-client",

        // ãã®ä»–
        "ms-python.mypy-type-checker",
        "tamasfe.even-better-toml"
      ],

      "settings": {
        // Pythonè¨­å®š
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": false,

        // Ruffï¼ˆæ–°ä¸–ä»£linter - 2025å¹´æ¨å¥¨ï¼‰
        "ruff.enable": true,
        "ruff.nativeServer": true,

        // Blackï¼ˆãƒ•ã‚©ãƒ¼ãƒãƒƒã‚¿ãƒ¼ï¼‰
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
          }
        },

        // MyPyï¼ˆå‹ãƒã‚§ãƒƒã‚¯ï¼‰
        "mypy-type-checker.args": [
          "--ignore-missing-imports",
          "--follow-imports=silent"
        ],

        // ãƒ†ã‚¹ãƒˆè¨­å®š
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,

        // SQLToolsè¨­å®š
        "sqltools.connections": [
          {
            "name": "PostgreSQL Local",
            "driver": "PostgreSQL",
            "server": "db",
            "port": 5433,
            "database": "fastapi_db",
            "username": "postgres",
            "password": "postgres"
          }
        ],

        // TypeScript/React è¨­å®š
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "tailwindCSS.experimental.classRegex": [
          ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
          ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ],

        // ãƒ•ã‚¡ã‚¤ãƒ«è¨­å®š
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/.mypy_cache": true,
          "**/.ruff_cache": true,
          "**/node_modules": true
        }
      }
    }
  },

  // ãƒ©ã‚¤ãƒ•ã‚µã‚¤ã‚¯ãƒ«ã‚³ãƒãƒ³ãƒ‰
  "postCreateCommand": "pip install -r requirements.txt -r requirements-dev.txt && npm install",
  "postStartCommand": "echo 'âœ… FastAPI + React Dev Container is ready!\nğŸ“š Swagger UI: http://localhost:8000/docs\nâš›ï¸  React App: http://localhost:5173'",

  // ã‚³ãƒ³ãƒ†ãƒŠå†…ã®å®Ÿè¡Œãƒ¦ãƒ¼ã‚¶ãƒ¼
  "remoteUser": "root",

  // VSCodeçµ‚äº†æ™‚ã«Docker Composeã‚’åœæ­¢
  "shutdownAction": "stopCompose"
}
